{
  "version": "0.2.0",
  "configurations": [
    {
      "name": "Python Debugger: Current File",
      "type": "debugpy",
      "request": "launch",
      "program": "${file}",
      "console": "integratedTerminal"
    },
    {
      "name": "data_prep.py",
      "type": "debugpy",
      "request": "launch",
      "program": "${workspaceFolder}/src/data_prep.py",
      "console": "integratedTerminal"
    },
    {
      "name": "Train Dinos - Scratch",
      "type": "debugpy",
      "request": "launch",
      "program": "${workspaceFolder}/src/scratch_char_level_rnn_model.py",
      "console": "integratedTerminal",
      "args": [
        "--dataset",
        "dinos",
        "--iterations",
        "22001",
        "--sample_every",
        "2000"
      ]
    },
    {
      "name": "Train Dinos - Scratch (Batch)",
      "type": "debugpy",
      "request": "launch",
      "program": "${workspaceFolder}/src/scratch_char_level_rnn_model_batch.py",
      "console": "integratedTerminal",
      "args": [
        "--dataset",
        "shakespeare",
        "--epochs",
        "50",
        "--batch_size",
        "64",
        "--optimizer",
        "adam"
      ]
    }
  ]
}
